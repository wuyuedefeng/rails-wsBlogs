<style type="text/css">
	.blog_header
	{
		height: 90px;
		background-color: green;
	}
	.blog_body
	{
		height: 500px;
	}
	.blog_body_left
	{
		float: left;
		width: 20%;
		background-color: white;
	}
	.blog_body_right
	{
		float: right;
		width: 80%;
		background-color: gray;
	}
	.blog_body_digest
	{
		margin: 20px 15px;
		height: 80px;
		margin: 5px 5px;
		background-color: white;
	}
	.blog_title{
		font-size: 20px;
		color: black;
		height: 30;
		margin: 2px 10px;
		background-color: orange
	}
	.blog_tags{
		height: 25px;
		margin: 2px 10px;
		background-color: blue;
	}
	.blog_body{
		height: 25px;
		margin: 2px 10px;
		background-color: green;
	}
</style>
<div class="blog_header">
	<h1>Blogs#index</h1>
	<p>Find me in app/views/blogs/index.html.erb</p>
</div>
<div class="blog_body">
	<div class="blog_body_left">
		<div style="background-color: #ddd;">导航</div>
		<div><%= link_to "新增博客",new_blog_path %></div>
		<div><%= link_to "选择语言",user_categories_path %></div>
	</div>
	<%= paginate @blogs %>
	<div class="blog_body_right">
		<% @blogs.each do |blog|  %>
			<div class="blog_body_digest">
				<!-- <font style="font-size:20px;text-align:center;display:block">title:</font>
				<div>
					tags: %>
					<div></div>
				</div> -->
				<div class="blog_title"><%= link_to blog.title,blog_path(blog) %></div>
				<div class="blog_tags"><%= blog.tags</div>
				<div class="blog_body"><%= raw blog.body %></div>
			</div>
			

		<% end %>
	</div>
	<%= paginate @blogs %>
</div>
<div class="blog_footer" ></div>