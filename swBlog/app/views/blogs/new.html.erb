<style type="text/css">
	.blog_header
	{
		height: 80px;
		background-color: green;
	}
	.blog_body
	{
		height: 500px;
	}
	.blog_body_left
	{
		float: left;
		width: 20%;
		background-color: white;
	}
	.blog_body_right
	{
		float: right;
		width: 80%;
		background-color: gray;
	}
	.blog_body_new
	{
		margin: 20px 15px;
		background-color: red;
	}
	.blog_body_new .blog_body_add_title
	{
		height: 100px;
		background-color: #eee;
	}
	.blog_body_new .blog_body_category
	{
		height: 150px;
		background-color: #bbb;
	}

</style>
<div class="blog_header">
	<h1>Blogs#index</h1>
	<p>Find me in app/views/blogs/index.html.erb</p>
</div>
<div class="blog_body">
	<div class="blog_body_left">
		<div style="background-color: #ddd;">分类</div>
	</div>
	<div class="blog_body_right">
		<%= form_for @blog, :url =>  {:action=>'create'} do |f| %> 
		<div class="blog_body_new">
			<div class="blog_body_add_title">
				<li>  
	    	 		<%= f.label :title,"标题" %>  
	   		 		<%= f.text_field :"title" %>  
	      		</li>
	      		<li>  
	    	 		<%= f.label :tags,"tags" %>  
	   		 		<%= f.text_field :"tags" %>  
	      		</li>
			</div>
			<div class="blog_body_content">
			<li>  
	        	 <%= f.label :body,"内容" %>  
	        	 <%= f.text_area :body, :class => 'ckeditor' %>

	     	 </li>
			</div>
			<div class="blog_body_category">
				<li>
					<%= f.label :category_id,"分类" %>  
		        	<%= f.text_field :category_id %> 
				</li>
			</div>  
				<div>
					<li>  
				 <%= f.submit :'发布' %>  
				</li>
			</div>
		</div>
		<% end %> 
	</div>
</div>
<div class="blog_footer" ></div>


