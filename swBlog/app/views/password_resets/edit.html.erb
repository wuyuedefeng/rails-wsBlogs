<h1>密码重置</h1>

<p>请输入您的新密码.</p>
<span style = "color:red"><%= flash.now[:error] %></span>
<%= form_tag password_reset_path, :method => :put do %>
  <%= label_tag :password,'密码' %>
  <%= password_field_tag :password %>
  <%= label_tag :password,'确认密码' %>
  <%= password_field_tag :password_confirmation %>
  <%= submit_tag "更新密码" %>
<% end %>