<style type="text/css">
  

</style>

<div style ="height:50px">
	<div style = "height: 0px; padding: 0px;text-align:center">
	  <h3 style = "margin-top: 15px;">选择语言</h3>
	</div>

	<div style= "float: right">
	    <div style = "float: right">
	      <form action= "<%= user_categories_path %>" class="navbar-form navbar-right" role="search">
	        <div class="form-group">
	          <input type="text" class="form-control" placeholder= "语言搜索" value = "<%= params[:category_search_text] %>" name="category_search_text">
	        </div>
	        <button type="submit" class="btn btn-default">搜索</button>
	      </form>
	    </div>
	</div>
</div>
<div>
<%= paginate @categories %>
<table class="table table-bordered table-hover valign">
  <thead>
      <tr>
      	<th>ID</th>
        <th>名称</th>
        <th>操作</th>
      </tr>
  </thead>
  <tbody>
      <% @categories.each_with_index do |category,index| %>
	      <tr>
	      	<td><%= category.id %></td>
	        <td><%= category.name %></td>
	        <td>
	        	<% if (@user_category_category_ids.present?) && @user_category_category_ids.include?(category.id) %>
	        		<%= link_to '点击取消',user_category_path(category[:id]), method: :put%>
	        	<% else %>
	        		<%= link_to '点击选中', user_category_path(category[:id]),method: :put %>
	        	<% end %>
	        </td>
	     </tr>
      <% end %>
  </tbody>
</table>
<%= paginate @categories %>
</div>
